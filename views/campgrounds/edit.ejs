<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center;margin-bottom:40px;margin-top:20px;">Edit <%= campground.name %></h1>
    <div style="width:30%;margin:0 auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" value="<%= campground.name %>" name="campground[name]" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" value="<%= campground.image %>" name="campground[image]" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" value="<%= campground.description %>" name="campground[description]" class="form-control">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go back!!</a>
    </div>
</div>
<% include ../partials/footer %>
