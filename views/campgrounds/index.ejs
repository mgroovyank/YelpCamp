<% include ../partials/header %>
<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Welcome to YelpCamp!!</h1>
        <p class="lead">View all of our hand-picked campgrounds from all over the US</p>
        <a href="/campgrounds/new" class="btn btn-primary btn-md">Add new Campgrounds</a>
    </div>
    
    <div class="row">
        <% campgrounds.forEach(function(campground){%>
        <div class="col-md-3 col-sm-6 figure text-center">
            <img src="<%= campground.image %>" class="img-thumbnail">
            <figcaption class="figure-caption text-center"><h5><%= campground.name %></h5></figcaption>
            <p><a href="/campgrounds/<%= campground._id %>" class="btn-sm btn-primary">More info</a></p>
        </div>
        <% }); %>
    
    </div>


    
</div>
 

<% include ../partials/footer %>